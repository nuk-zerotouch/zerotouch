<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ZeroTouch.UI.ViewModels"
             xmlns:gif="clr-namespace:Avalonia.Labs.Gif;assembly=Avalonia.Labs.Gif"
             xmlns:ani="clr-namespace:Avalonia.Animation;assembly=Avalonia.Animation"
             xmlns:converters="using:ZeroTouch.UI.Converters"
             mc:Ignorable="d"
             x:Class="ZeroTouch.UI.Views.MainDashboardView"
             x:DataType="vm:MainDashboardViewModel">

    <UserControl.Resources>
        <converters:BoolTrueToOneConverter x:Key="TrueToOne" />
        <converters:BoolFalseToOneConverter x:Key="FalseToOne" />
    </UserControl.Resources>
    
    <UserControl.Styles>
        <Style Selector="Button.dock-btn">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="CornerRadius" Value="35"/>
            <Setter Property="Background" Value="#10FFFFFF"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

            <Setter Property="Template">
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border CornerRadius="35"
                                Background="{TemplateBinding Background}">
                            
                            <ContentPresenter
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>

                        <!-- ring -->
                        <Border x:Name="OuterRing"
                                CornerRadius="35"
                                BorderThickness="3"
                                BorderBrush="Transparent"/>
                    </Grid>
                </ControlTemplate>
            </Setter>

            <!-- Darken background on hover -->
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#202020"/>
            </Style>

            <!-- Display ring when hovered -->
            <Style Selector="^:pointerover /template/ Border#OuterRing">
                <Setter Property="BorderBrush" Value="White"/>
            </Style>
            
        </Style>

        <Style Selector="Button.music-btn:pointerover">
            <Setter Property="Background" Value="#A0000000"/>
        </Style>
        
        <Style Selector="Button.music-btn:pointerover /template/ Border#OuterRing">
            <Setter Property="BorderBrush" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="2.5"/>
        </Style>

        <!-- Music buttons bounce -->
        <Style Selector="Button.music-btn">
            <Setter Property="RenderTransformOrigin" Value="50%,50%"/>
            
            <Setter Property="RenderTransform">
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter>
        </Style>

        <Style Selector="Button.music-btn:not(:pressed)">
            <Style.Animations>
                <Animation Duration="0:0:0.45" Easing="SineEaseInOut">
                    
                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                    
                    <KeyFrame Cue="40%">
                        <Setter Property="ScaleTransform.ScaleX" Value="0.75"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.75"/>
                    </KeyFrame>
                    
                    <KeyFrame Cue="70%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.05"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.05"/>
                    </KeyFrame>
                    
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                    
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Dock buttons bounce -->
        <Style Selector="Button.dock-btn">
            <Setter Property="RenderTransformOrigin" Value="50%,50%"/>
            
            <Setter Property="RenderTransform">
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter>
        </Style>

        <Style Selector="Button.dock-btn:not(.music-btn):not(:pressed)">
            <Style.Animations>
                <Animation Duration="0:0:0.45" Easing="SineEaseInOut">
                    
                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                    
                    <KeyFrame Cue="40%">
                        <Setter Property="ScaleTransform.ScaleX" Value="0.75"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.75"/>
                    </KeyFrame>
                    
                    <KeyFrame Cue="70%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.05"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.05"/>
                    </KeyFrame>
                    
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                    
                </Animation>
            </Style.Animations>
        </Style>

    </UserControl.Styles>

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid>
            
            <!-- Main Dashboard (Dashboard View) -->
            <Border CornerRadius="30"
                    Background="#121212"
                    Padding="20"
                    BoxShadow="0 0 25 #0008"
                    IsVisible="{Binding IsDashboardOpen}">

                <Grid RowDefinitions="*,*"
                      ColumnDefinitions="Auto,2*,*">

                    <Grid Grid.Row="0"
                          Grid.RowSpan="2"
                          Grid.Column="0"
                          RowDefinitions="Auto,*"
                          Margin="12"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Center">

                        <!-- Clock Capsule! -->
                        <Border Grid.Row="0"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,12"
                                Height="36"
                                CornerRadius="18"
                                Background="#2ECC71"
                                BoxShadow="0 0 8 #0008">

                            <TextBlock Text="{Binding CurrentTime}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,7,0,0"/>
                        </Border>

                        <!-- Left App Bar with Dock style -->
                        <Panel Grid.Row="1"
                               VerticalAlignment="Stretch"
                               HorizontalAlignment="Center">

                            <Border Background="#20FFFFFF"
                                    CornerRadius="40"
                                    Padding="15"
                                    BoxShadow="0 0 20 #0006">
                                
                                <Border.Effect>
                                    <BlurEffect Radius="4"/>
                                </Border.Effect>
                                
                            </Border>

                            <Border Background="Transparent"
                                    CornerRadius="40"
                                    Padding="15">
                                
                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Spacing="30">

                                    <!-- Home -->
                                    <Button Classes="dock-btn"
                                            Command="{Binding ShowHomeCommand}">
                                        
                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/home.png"
                                               Width="40" Height="40"/>
                                    </Button>

                                    <!-- Phone -->
                                    <Button Classes="dock-btn"
                                            Command="{Binding ShowPhoneCommand}">
                                        
                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/phone.png"
                                               Width="40" Height="40"/>
                                    </Button>

                                    <!-- Google Maps -->
                                    <Button Classes="dock-btn"
                                            Command="{Binding ShowMapsCommand}">
                                        
                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/google-maps.png"
                                               Width="40" Height="40"/>
                                    </Button>

                                    <!-- Settings -->
                                    <Button Classes="dock-btn"
                                            Command="{Binding ShowSettingsCommand}">
                                        
                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/settings.png"
                                               Width="40" Height="40"/>
                                    </Button>

                                </StackPanel>
                            </Border>
                        </Panel>
                    </Grid>

                    <!-- Map Panel -->
                    <Border Grid.Row="0"
                            Grid.Column="1"
                            CornerRadius="25"
                            Background="#1E1E1E"
                            Margin="12">
                        
                        <TextBlock Text="Map View (Placeholder)"
                                   Foreground="#DDDDDD"
                                   FontSize="32"
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Info Panel -->
                    <Border Grid.Row="1"
                            Grid.Column="1"
                            CornerRadius="25"
                            Background="#191919"
                            Margin="12">
                        
                        <TextBlock Text="Navigation Info (Placeholder)"
                                   Foreground="#AAAAAA"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Right Panels -->
                    <Grid Grid.Row="0"
                          Grid.RowSpan="2"
                          Grid.Column="2"
                          RowDefinitions="*,*">

                        <!-- Weather -->
                        <Border CornerRadius="25"
                                Background="#202020"
                                Margin="12"
                                Padding="18">

                            <Grid RowDefinitions="Auto,Auto"
                                  ColumnDefinitions="*,Auto">

                                <StackPanel Grid.Row="0"
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            Spacing="8">

                                    <!-- Location -->
                                    <TextBlock Text="{Binding Location}"
                                               FontWeight="Bold"
                                               FontSize="22"
                                               Foreground="#FFFFFF"/>

                                    <!-- Weather Condition -->
                                    <TextBlock Text="{Binding WeatherCondition}"
                                               FontSize="18"
                                               Foreground="#DDDDDD"
                                               Margin="0,10,0,0"/>

                                    <!-- Temperature colored bar -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="6"
                                                Margin="0,4,0,8"
                                                VerticalAlignment="Center">

                                        <TextBlock Text="{Binding MinTemperature}"
                                                   FontSize="14"
                                                   Foreground="#AAAAAA"
                                                   VerticalAlignment="Center"/>

                                        <Border Width="120"
                                                Height="6"
                                                CornerRadius="3"
                                                Background="{Binding TemperatureBarBrush}" />

                                        <TextBlock Text="{Binding MaxTemperature}"
                                                   FontSize="14"
                                                   Foreground="#AAAAAA"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- GIF -->
                                <gif:GifImage Grid.Row="0"
                                              Grid.Column="1"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Top"
                                              Source="{Binding WeatherIconPath}"
                                              Width="90"
                                              Height="90"/>

                                <!-- Info Bar -->
                                <Grid Grid.Row="1"
                                      Grid.ColumnSpan="2"
                                      Margin="0,16,0,0"
                                      ColumnDefinitions="*,*">

                                    <!-- Precipitation -->
                                    <StackPanel Grid.Column="0"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                Spacing="6">

                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/precipitation.png"
                                               Width="30"
                                               Height="30"
                                               VerticalAlignment="Center"/>

                                        <TextBlock Text="{Binding Pop}"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="#CCCCCC"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Comfortability -->
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Spacing="6"
                                                Margin="0,0,15,0">

                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/leaf.png"
                                               Width="25"
                                               Height="25"
                                               VerticalAlignment="Center"/>

                                        <TextBlock Text="{Binding Comfort}"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="#CCCCCC"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Music -->
                        <Border Grid.Row="1"
                                CornerRadius="25"
                                Background="#D93C3C"
                                Margin="12">

                            <StackPanel Margin="15" Spacing="8">

                                <TextBlock Text="🎵 Player"
                                           FontWeight="Bold"
                                           FontSize="22"
                                           Foreground="White"/>

                                <TextBlock Text="{Binding CurrentSong}"
                                           FontSize="16"
                                           Foreground="#F0F0F0"/>

                                <!-- Progress Bar -->
                                <Slider Minimum="0"
                                        Maximum="{Binding Duration}"
                                        Value="{Binding Progress}"
                                        ValueChanged="MusicSlider_OnValueChanged"/>

                                <!-- Control Buttons -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Spacing="15"
                                            Margin="0,10,0,0">

                                    <!-- Previous song -->
                                    <Button Classes="dock-btn music-btn"
                                            Width="40"
                                            Height="40"
                                            CornerRadius="25"
                                            Background="#C23030"
                                            Command="{Binding PreviousCommand}">
                                        
                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/previous-button.png"
                                               Width="22"/>
                                    </Button>

                                    <!-- Play / Pause shared button -->
                                    <Button Classes="dock-btn music-btn"
                                            Width="50"
                                            Height="50"
                                            Background="#C23030"
                                            CornerRadius="25"
                                            Command="{Binding PlayPauseCommand}">

                                        <Grid>
                                            <!-- Play -->
                                            <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/play-button.png"
                                                   Width="26"
                                                   Opacity="{Binding IsPlaying, Converter={StaticResource FalseToOne}}">
                                                
                                                <Image.Transitions>
                                                    
                                                    <Transitions>
                                                        <DoubleTransition Property="Opacity" Duration="0:0:0.25" />
                                                    </Transitions>
                                                    
                                                </Image.Transitions>
                                            </Image>

                                            <!-- Pause -->
                                            <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/pause-button.png"
                                                   Width="26"
                                                   Opacity="{Binding IsPlaying, Converter={StaticResource TrueToOne}}">
                                                
                                                <Image.Transitions>
                                                    
                                                    <Transitions>
                                                        <DoubleTransition Property="Opacity" Duration="0:0:0.25" />
                                                    </Transitions>
                                                    
                                                </Image.Transitions>
                                            </Image>
                                        </Grid>
                                    </Button>

                                    <!-- Next song -->
                                    <Button Classes="dock-btn music-btn"
                                            Width="40"
                                            Height="40"
                                            CornerRadius="25"
                                            Background="#C23030"
                                            Command="{Binding NextCommand}">
                                        
                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/next-button.png"
                                               Width="22"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Settings View -->
            <Border CornerRadius="30"
                    Background="#121212"
                    Padding="20"
                    BoxShadow="0 0 25 #0008"
                    IsVisible="{Binding IsSettingsOpen}">

                <Grid RowDefinitions="*,*"
                      ColumnDefinitions="Auto,2*,*">

                    <Grid Grid.Row="0"
                          Grid.RowSpan="2"
                          Grid.Column="0"
                          RowDefinitions="Auto,*"
                          Margin="12"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Center">

                        <Border Grid.Row="0"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,12"
                                Height="36"
                                CornerRadius="18"
                                Background="#2ECC71"
                                BoxShadow="0 0 8 #0008">
                            
                            <TextBlock Text="{Binding CurrentTime}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,7,0,0"/>
                        </Border>

                        <Panel Grid.Row="1"
                               VerticalAlignment="Stretch"
                               HorizontalAlignment="Center">

                            <Border Background="#20FFFFFF"
                                    CornerRadius="40"
                                    Padding="15"
                                    BoxShadow="0 0 20 #0006">
                                
                                <Border.Effect>
                                    <BlurEffect Radius="4"/>
                                </Border.Effect>
                                
                            </Border>

                            <Border Background="Transparent"
                                    CornerRadius="40"
                                    Padding="15">
                                
                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Spacing="30">

                                    <Button Classes="dock-btn"
                                            Command="{Binding ShowHomeCommand}">
                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/home.png"
                                               Width="40" Height="40"/>
                                    </Button>

                                    <Button Classes="dock-btn"
                                            Command="{Binding ShowPhoneCommand}">
                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/phone.png"
                                               Width="40" Height="40"/>
                                    </Button>

                                    <Button Classes="dock-btn"
                                            Command="{Binding ShowMapsCommand}">
                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/google-maps.png"
                                               Width="40" Height="40"/>
                                    </Button>

                                    <Button Classes="dock-btn"
                                            Command="{Binding ShowSettingsCommand}">
                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/settings.png"
                                               Width="40" Height="40"/>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Panel>
                    </Grid>

                    <Border Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            CornerRadius="25"
                            Background="#1E1E1E"
                            Margin="12"
                            Padding="20">
                        
                        <StackPanel Spacing="16">
                            
                            <TextBlock Text="Settings"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,10"/>

                            <ToggleSwitch Content="Dark theme"
                                          IsChecked="{Binding IsDarkTheme}"
                                          FontSize="16"
                                          Margin="0,4,0,0"/>

                            <ToggleSwitch Content="Blink clock colon"
                                          IsChecked="{Binding IsClockBlinking}"
                                          FontSize="16"
                                          Margin="0,4,0,0"/>

                            <ToggleSwitch Content="24-hour format"
                                          IsChecked="{Binding Is24HourFormat}"
                                          FontSize="16"
                                          Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="2"
                            CornerRadius="25"
                            Background="#202020"
                            Margin="12"
                            Padding="20">
                        
                        <StackPanel Spacing="10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            
                            <TextBlock Text="Preview"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            
                            <TextBlock Text="(Clock / Theme preview later)"
                                       FontSize="14"
                                       Foreground="#BBBBBB"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>
