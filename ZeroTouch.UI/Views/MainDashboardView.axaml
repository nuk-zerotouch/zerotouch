<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ZeroTouch.UI.ViewModels"
             xmlns:nav="using:ZeroTouch.UI.Navigation"
             xmlns:gif="clr-namespace:Avalonia.Labs.Gif;assembly=Avalonia.Labs.Gif"
             xmlns:ani="clr-namespace:Avalonia.Animation;assembly=Avalonia.Animation"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Avalonia;assembly=Mapsui.UI.Avalonia"
             xmlns:converters="using:ZeroTouch.UI.Converters"
             mc:Ignorable="d"
             x:Class="ZeroTouch.UI.Views.MainDashboardView"
             x:DataType="vm:MainDashboardViewModel">

    <UserControl.Resources>
        <converters:BoolTrueToOneConverter x:Key="TrueToOne" />
        <converters:BoolFalseToOneConverter x:Key="FalseToOne" />
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Button.dock-btn">

            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="CornerRadius" Value="35"/>
            <Setter Property="Background" Value="#10FFFFFF"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

            <Setter Property="Template">

                <ControlTemplate TargetType="Button">

                    <Grid>
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                Background="{TemplateBinding Background}">

                            <ContentPresenter
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>

                        <!-- Ring -->
                        <Border x:Name="OuterRing"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                BorderThickness="3"
                                BorderBrush="Transparent"/>
                    </Grid>
                </ControlTemplate>
            </Setter>

            <!-- Darken background on hover -->
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#202020"/>
            </Style>

            <!-- Display ring when hovered -->
            <Style Selector="^:pointerover /template/ Border#OuterRing">
                <Setter Property="BorderBrush" Value="White"/>
            </Style>

        </Style>

        <Style Selector="Button.music-btn:pointerover">
            <Setter Property="Background" Value="#A0000000"/>
        </Style>

        <Style Selector="Button.music-btn:pointerover /template/ Border#OuterRing">
            <Setter Property="BorderBrush" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="2.5"/>
        </Style>

        <!-- Music buttons bounce -->
        <Style Selector="Button.music-btn">
            <Setter Property="RenderTransformOrigin" Value="50%,50%"/>

            <Setter Property="RenderTransform">
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter>
        </Style>

        <Style Selector="Button.music-btn:not(:pressed)">
            <Style.Animations>
                <Animation Duration="0:0:0.45" Easing="SineEaseInOut">

                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>

                    <KeyFrame Cue="40%">
                        <Setter Property="ScaleTransform.ScaleX" Value="0.75"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.75"/>
                    </KeyFrame>

                    <KeyFrame Cue="70%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.05"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.05"/>
                    </KeyFrame>

                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>

                </Animation>
            </Style.Animations>
        </Style>

        <!-- Dock buttons bounce -->
        <Style Selector="Button.dock-btn">
            <Setter Property="RenderTransformOrigin" Value="50%,50%"/>

            <Setter Property="RenderTransform">
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter>
        </Style>

        <Style Selector="Button.dock-btn:not(.music-btn):not(:pressed)">
            <Style.Animations>
                <Animation Duration="0:0:0.45" Easing="SineEaseInOut">

                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>

                    <KeyFrame Cue="40%">
                        <Setter Property="ScaleTransform.ScaleX" Value="0.75"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.75"/>
                    </KeyFrame>

                    <KeyFrame Cue="70%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.05"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.05"/>
                    </KeyFrame>

                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>

                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="Button.keypad-btn">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Command" Value="{Binding KeypadTapCommand}"/>

            <Setter Property="RenderTransformOrigin" Value="50%,50%"/>

            <Setter Property="RenderTransform">
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter>

            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>

            <Setter Property="Template">
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                Background="{TemplateBinding Background}">

                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <Border x:Name="OuterRing"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                BorderThickness="3"
                                BorderBrush="Transparent"/>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="Button.keypad-btn:not(:pressed)">
            <Style.Animations>
                <Animation Duration="0:0:0.45" Easing="SineEaseInOut">

                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>

                    <KeyFrame Cue="40%">
                        <Setter Property="ScaleTransform.ScaleX" Value="0.75"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.75"/>
                    </KeyFrame>

                    <KeyFrame Cue="70%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.05"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.05"/>
                    </KeyFrame>

                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>

                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="Button.keypad-btn:pointerover">
            <Setter Property="Background" Value="#353535"/>
            <Setter Property="Foreground" Value="#FFA500"/>
        </Style>

        <Style Selector="Button.keypad-btn:pointerover /template/ Border#OuterRing">
            <Setter Property="BorderBrush" Value="White"/>
        </Style>

        <Style Selector="Button.keypad-btn:pressed">
            <Setter Property="ScaleTransform.ScaleX" Value="0.85"/>
            <Setter Property="ScaleTransform.ScaleY" Value="0.85"/>
        </Style>

        <Style Selector="Border.keypad-anim[IsVisible=true]">
            <Style.Animations>
                <Animation Duration="0:0:0.75" Easing="CubicEaseOut" FillMode="Forward" IterationCount="1">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="0.8"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.8"/>
                        <Setter Property="TranslateTransform.Y" Value="50"/>
                    </KeyFrame>
                    
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="0.8"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.8"/>
                        <Setter Property="TranslateTransform.Y" Value="0"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        
        <Style Selector="Button.dock-btn[Tag=True] /template/ Border#OuterRing">
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>

        <Style Selector="Button.dock-btn[Tag=True]">
            <Setter Property="RenderTransform">
                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
            </Setter>
        </Style>

    </UserControl.Styles>

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Width="1000" Height="560">

            <!-- Main Dashboard (Dashboard View) -->
            <Border CornerRadius="30"
                    Background="#121212"
                    Padding="20"
                    BoxShadow="0 0 25 #0008">

                <Grid ColumnDefinitions="Auto,*">

                    <Grid Grid.Column="0"
                          RowDefinitions="Auto,*"
                          Margin="12"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Center">

                        <!-- Clock Capsule! -->
                        <Border Grid.Row="0"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,12"
                                Height="36"
                                CornerRadius="18"
                                Background="#2ECC71"
                                BoxShadow="0 0 8 #0008">

                            <TextBlock Text="{Binding CurrentTime}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,7,0,0"/>
                        </Border>

                        <!-- Left App Bar with Dock style -->
                        <Panel Grid.Row="1"
                               VerticalAlignment="Stretch"
                               HorizontalAlignment="Center">

                            <Border Background="#20FFFFFF"
                                    CornerRadius="40"
                                    Padding="15"
                                    BoxShadow="0 0 20 #0006">

                                <Border.Effect>
                                    <BlurEffect Radius="4"/>
                                </Border.Effect>

                            </Border>

                            <Border Background="Transparent"
                                    CornerRadius="40"
                                    Padding="15">

                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Spacing="30">

                                    <!-- Home -->
                                    <Button Classes="dock-btn"
                                            x:DataType="nav:IFocusableItem"
                                            DataContext="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).DockFocusGroup.Items[0]}"
                                            Command="{Binding Command}">

                                        <Button.Tag>
                                            <Binding Path="IsSelected"/>
                                        </Button.Tag>

                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/home.png"
                                               Width="40"
                                               Height="40"/>
                                    </Button>

                                    <!-- Phone -->
                                    <Button Classes="dock-btn"
                                            x:DataType="nav:IFocusableItem"
                                            DataContext="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).DockFocusGroup.Items[1]}"
                                            Command="{Binding Command}">

                                        <Button.Tag>
                                            <Binding Path="IsSelected"/>
                                        </Button.Tag>

                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/phone.png"
                                               Width="40" Height="40"/>
                                    </Button>

                                    <!-- Maps -->
                                    <Button Classes="dock-btn"
                                            x:DataType="nav:IFocusableItem"
                                            DataContext="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).DockFocusGroup.Items[2]}"
                                            Command="{Binding Command}">

                                        <Button.Tag>
                                            <Binding Path="IsSelected"/>
                                        </Button.Tag>

                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/google-maps.png"
                                               Width="40" Height="40"/>
                                    </Button>

                                    <!-- Settings -->
                                    <Button Classes="dock-btn"
                                            x:DataType="nav:IFocusableItem"
                                            DataContext="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).DockFocusGroup.Items[3]}"
                                            Command="{Binding Command}">

                                        <Button.Tag>
                                            <Binding Path="IsSelected"/>
                                        </Button.Tag>

                                        <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/settings.png"
                                               Width="40" Height="40"/>
                                    </Button>

                                </StackPanel>
                            </Border>
                        </Panel>
                    </Grid>

                    <Carousel Grid.Column="1"
                              SelectedIndex="{Binding CurrentPageIndex}"
                              PageTransition="{Binding CurrentPageTransition}">

                        <!-- Settings View -->
                        <Grid ColumnDefinitions="2*,*" Margin="12,0,0,0">

                            <Border Grid.Column="0"
                                    CornerRadius="25"
                                    Background="#1E1E1E"
                                    BorderBrush="#333333"
                                    BorderThickness="1"
                                    Margin="12"
                                    Padding="30">

                                <StackPanel Spacing="20">

                                    <StackPanel Orientation="Horizontal"
                                                Spacing="10"
                                                Margin="0,0,0,10">

                                        <TextBlock Text="⚙️"
                                                   FontSize="24"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Text="System Settings"
                                                   FontSize="28"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Separator Background="#333333"
                                               Height="1"
                                               Margin="0,0,0,10"/>

                                    <Grid ColumnDefinitions="*, Auto">

                                        <StackPanel Grid.Column="0"
                                                    VerticalAlignment="Center">

                                            <TextBlock Text="Dark Theme"
                                                       FontSize="18"
                                                       FontWeight="Medium"
                                                       Foreground="White"/>

                                            <TextBlock Text="Use darker colors for night driving"
                                                       FontSize="12"
                                                       Foreground="#888888"/>
                                        </StackPanel>

                                        <ToggleSwitch Grid.Column="1"
                                                      Focusable="False"
                                                      IsChecked="{Binding IsDarkTheme}"
                                                      OnContent=""
                                                      OffContent=""/>
                                    </Grid>

                                    <Grid ColumnDefinitions="*, Auto">

                                        <StackPanel Grid.Column="0"
                                                    VerticalAlignment="Center">

                                            <TextBlock Text="Blinking Colon"
                                                       FontSize="18"
                                                       FontWeight="Medium"
                                                       Foreground="White"/>

                                            <TextBlock Text="Animate the separator in digital clock"
                                                       FontSize="12"
                                                       Foreground="#888888"/>
                                        </StackPanel>

                                        <ToggleSwitch Grid.Column="1"
                                                      Focusable="False"
                                                      IsChecked="{Binding IsClockBlinking}"
                                                      OnContent=""
                                                      OffContent=""/>
                                    </Grid>

                                    <Grid ColumnDefinitions="*, Auto">

                                        <StackPanel Grid.Column="0"
                                                    VerticalAlignment="Center">

                                            <TextBlock Text="24-Hour Format"
                                                       FontSize="18"
                                                       FontWeight="Medium"
                                                       Foreground="White"/>

                                            <TextBlock Text="Switch between 12h and 24h display"
                                                       FontSize="12"
                                                       Foreground="#888888"/>
                                        </StackPanel>

                                        <ToggleSwitch Grid.Column="1"
                                                      Focusable="False"
                                                      IsChecked="{Binding Is24HourFormat}"
                                                      OnContent=""
                                                      OffContent=""/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1"
                                    CornerRadius="25"
                                    Background="#252525"
                                    BorderBrush="#333333"
                                    BorderThickness="1"
                                    Margin="12"
                                    Padding="20">

                                <Grid RowDefinitions="Auto, *, Auto">

                                    <TextBlock Grid.Row="0"
                                               Text="Vehicle Status"
                                              FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="#FFA500"
                                               Margin="0,0,0,36"/>

                                    <StackPanel Grid.Row="1" Spacing="25">

                                        <StackPanel Spacing="12">

                                            <Grid>
                                                <TextBlock Text="Battery Level"
                                                           Foreground="#DDDDDD"
                                                           FontSize="14"/>

                                                <TextBlock Text="82%"
                                                           Foreground="#2ECC71"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>

                                            <ProgressBar Value="85"
                                                         Maximum="100"
                                                         Height="6"
                                                         CornerRadius="3"
                                                         Foreground="#2ECC71"
                                                         Background="#444444"/>
                                        </StackPanel>

                                        <StackPanel Spacing="12">

                                            <Grid>
                                                <TextBlock Text="System Temp"
                                                           Foreground="#DDDDDD"
                                                           FontSize="14"/>

                                                <TextBlock Text="45°C"
                                                           Foreground="#E74C3C"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>

                                            <ProgressBar Value="45"
                                                         Maximum="100"
                                                         Height="6"
                                                         CornerRadius="3"
                                                         Foreground="#E74C3C"
                                                         Background="#444444"/>
                                        </StackPanel>

                                        <StackPanel Spacing="12">

                                            <Grid>
                                                <TextBlock Text="Storage Usage"
                                                           Foreground="#DDDDDD"
                                                           FontSize="14"/>

                                                <TextBlock Text="12GB / 64GB"
                                                           Foreground="#3498DB"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>

                                            <ProgressBar Value="18"
                                                         Maximum="100"
                                                         Height="6"
                                                         CornerRadius="3"
                                                         Foreground="#3498DB"
                                                         Background="#444444"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Border Grid.Row="2"
                                            Background="#303030"
                                            CornerRadius="15"
                                            Padding="15"
                                            Margin="0,20,0,0">

                                        <StackPanel Spacing="12">

                                            <StackPanel Spacing="8">

                                                <TextBlock Text="Devices"
                                                           FontWeight="Bold"
                                                           Foreground="White"/>

                                                <StackPanel Orientation="Horizontal" Spacing="10" Margin="15,10,0,0">

                                                    <Border Width="8"
                                                            Height="8"
                                                            CornerRadius="4"
                                                            Background="#2ECC71"
                                                            VerticalAlignment="Center"/>

                                                    <TextBlock Text="Bluetooth: Connected"
                                                               Foreground="#AAAAAA"
                                                               FontSize="12"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Spacing="10" Margin="15,0,0,0">

                                                    <Border Width="8"
                                                            Height="8"
                                                            CornerRadius="4"
                                                            Background="#2ECC71"
                                                            VerticalAlignment="Center"/>

                                                    <TextBlock Text="GPS: Signal Strong"
                                                               Foreground="#AAAAAA"
                                                               FontSize="12"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <Separator Background="#444444" Height="1"/>

                                            <Grid ColumnDefinitions="Auto, *" Margin="15,0,0,0">

                                                <Border Grid.Column="0"
                                                        Width="36" Height="60"
                                                        CornerRadius="6"
                                                        BorderBrush="#555555"
                                                        BorderThickness="2"
                                                        Background="#101010"
                                                        Margin="0,0,15,0"
                                                        VerticalAlignment="Center">

                                                    <Grid>
                                                        <Border Background="#20FFFFFF" Margin="2" CornerRadius="3"/>

                                                        <Border Width="12" Height="3"
                                                                Background="Black"
                                                                CornerRadius="1.5"
                                                                VerticalAlignment="Top"
                                                                Margin="0,4,0,0"/>

                                                        <Border Width="14" Height="1.5"
                                                                Background="#555555"
                                                                VerticalAlignment="Bottom"
                                                                Margin="0,0,0,4"
                                                                Opacity="0.5"/>
                                                    </Grid>
                                                </Border>

                                                <StackPanel Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            Spacing="6">

                                                    <TextBlock Text="iPhone 14"
                                                               FontWeight="SemiBold"
                                                               Foreground="White"
                                                               FontSize="14"/>

                                                    <StackPanel Orientation="Horizontal"
                                                                Spacing="15"
                                                                VerticalAlignment="Center">

                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="6"
                                                                    VerticalAlignment="Center">

                                                            <Border Width="22" Height="10"
                                                                    BorderBrush="#AAAAAA"
                                                                    BorderThickness="1"
                                                                    CornerRadius="2"
                                                                    Padding="1">

                                                                <Border HorizontalAlignment="Left"
                                                                        Width="15"
                                                                        Background="#2ECC71"
                                                                        CornerRadius="0.5"/>
                                                            </Border>

                                                            <TextBlock Text="72%"
                                                                       Foreground="#AAAAAA"
                                                                       FontSize="11"
                                                                       VerticalAlignment="Center"/>
                                                        </StackPanel>

                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="2"
                                                                    Height="10"
                                                                    VerticalAlignment="Center">

                                                            <Border Width="3" Height="4" Background="White" CornerRadius="1" VerticalAlignment="Bottom"/>
                                                            <Border Width="3" Height="6" Background="White" CornerRadius="1" VerticalAlignment="Bottom"/>
                                                            <Border Width="3" Height="8" Background="White" CornerRadius="1" VerticalAlignment="Bottom"/>
                                                            <Border Width="3" Height="10" Background="#444444" CornerRadius="1" VerticalAlignment="Bottom"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Dashboard View (Home Page) -->
                        <Grid ColumnDefinitions="2*,*" Margin="12,0,0,0">

                            <Grid Grid.Column="0" RowDefinitions="*,Auto">

                                <Border Grid.Row="0"
                                        Grid.RowSpan="2"
                                        CornerRadius="25"
                                        Background="#1E1E1E"
                                        ClipToBounds="True"
                                        Margin="12">

                                    <mapsui:MapControl Name="MapControl"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Stretch" />
                                </Border>

                                <Border Grid.Row="1"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center"
                                        Height="80"
                                        Width="350"
                                        CornerRadius="20"
                                        Background="#CC000000"
                                        Margin="0,0,0,30"
                                        BoxShadow="0 4 10 #0005">

                                    <Grid ColumnDefinitions="Auto,*" Margin="15">

                                        <Border Grid.Column="0"
                                                Width="50"
                                                Height="50"
                                                CornerRadius="25"
                                                Background="#2ECC71"
                                                Margin="0,0,15,0">

                                            <TextBlock Text="{Binding NavigationIcon}"
                                                       FontSize="30"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="0,-5,0,0"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">

                                            <TextBlock Text="{Binding NavigationInstruction}"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       FontSize="18"/>

                                            <TextBlock Text="{Binding NavigationDistance}"
                                                       Foreground="#CCCCCC"
                                                       FontSize="14"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>

                            <Grid Grid.Column="1" RowDefinitions="*,*">

                                <Border Grid.Row="0"
                                        CornerRadius="25"
                                        Background="#202020"
                                        Margin="12"
                                        Padding="18">

                                    <Grid RowDefinitions="Auto,Auto"
                                          ColumnDefinitions="*,Auto">

                                        <StackPanel Grid.Row="0"
                                                    Grid.Column="0"
                                                    VerticalAlignment="Top"
                                                    Spacing="8">

                                            <!-- Location -->
                                            <TextBlock Text="{Binding Location}"
                                                       FontWeight="Bold"
                                                       FontSize="22"
                                                       Foreground="#FFFFFF"/>

                                            <!-- Weather Condition -->
                                            <TextBlock Text="{Binding WeatherCondition}"
                                                       FontSize="18"
                                                       Foreground="#DDDDDD"
                                                       Margin="0,30,0,0"/>

                                            <!-- Temperature colored bar -->
                                            <StackPanel Orientation="Horizontal"
                                                        Spacing="6"
                                                        Margin="0,12,0,8"
                                                        VerticalAlignment="Center">
                                                
                                                <TextBlock Text="{Binding MinTemperature}"
                                                           FontSize="14"
                                                           Foreground="#AAAAAA"
                                                           VerticalAlignment="Center"/>
                                                
                                                <Border Width="120"
                                                        Height="6"
                                                        CornerRadius="3"
                                                        Background="{Binding TemperatureBarBrush}" />
                                                
                                                <TextBlock Text="{Binding MaxTemperature}"
                                                           FontSize="14"
                                                           Foreground="#AAAAAA"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- GIF -->
                                        <gif:GifImage Grid.Row="0"
                                                      Grid.Column="1"
                                                      HorizontalAlignment="Right"
                                                      VerticalAlignment="Top"
                                                      Source="{Binding WeatherIconPath}"
                                                      Width="90"
                                                      Height="90"/>

                                        <!-- Info Bar -->
                                        <Grid Grid.Row="1"
                                              Grid.ColumnSpan="2"
                                              Margin="0,45,0,0"
                                              ColumnDefinitions="*,*">

                                            <!-- Precipitation -->
                                            <StackPanel Grid.Column="0"
                                                        Orientation="Horizontal"
                                                        HorizontalAlignment="Left"
                                                        Spacing="6">
                                                
                                                <Image Source="avares://ZeroTouch.UI/Assets/Icons/Dark/precipitation.png"
                                                       Width="30"
                                                       Height="30"
                                                       VerticalAlignment="Center"/>
                                                
                                                <TextBlock Text="{Binding Pop}"
