                                            IsVisible="{Binding IsKeypadVisible}"
                                            Opacity="0"
                                            RenderTransformOrigin="50%,50%"
                                            Background="#1E1E1E"
                                            CornerRadius="25"
                                            Padding="20"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Margin="0,0,30,30"
                                            BoxShadow="0 10 30 #000000">

                                        <Border.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                                <TranslateTransform X="20" Y="50"/>
                                            </TransformGroup>
                                        </Border.RenderTransform>
                                        
                                        <Grid RowDefinitions="Auto,Auto">

                                            <StackPanel Grid.Row="0" Spacing="15">
                                                
                                                <TextBlock Text="Keypad"
                                                           Foreground="#888888"
                                                           HorizontalAlignment="Center"/>
                                                
                                                <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*,*">
                                                    <Button Classes="keypad-btn" Grid.Row="0" Grid.Column="0" Content="1" Command="{Binding DtmfTapCommand}" CommandParameter="1"/>
                                                    <Button Classes="keypad-btn" Grid.Row="0" Grid.Column="1" Content="2" Command="{Binding DtmfTapCommand}" CommandParameter="2"/>
                                                    <Button Classes="keypad-btn" Grid.Row="0" Grid.Column="2" Content="3" Command="{Binding DtmfTapCommand}" CommandParameter="3"/>

                                                    <Button Classes="keypad-btn" Grid.Row="1" Grid.Column="0" Content="4" Command="{Binding DtmfTapCommand}" CommandParameter="4"/>
                                                    <Button Classes="keypad-btn" Grid.Row="1" Grid.Column="1" Content="5" Command="{Binding DtmfTapCommand}" CommandParameter="5"/>
                                                    <Button Classes="keypad-btn" Grid.Row="1" Grid.Column="2" Content="6" Command="{Binding DtmfTapCommand}" CommandParameter="6"/>

                                                    <Button Classes="keypad-btn" Grid.Row="2" Grid.Column="0" Content="7" Command="{Binding DtmfTapCommand}" CommandParameter="7"/>
                                                    <Button Classes="keypad-btn" Grid.Row="2" Grid.Column="1" Content="8" Command="{Binding DtmfTapCommand}" CommandParameter="8"/>
                                                    <Button Classes="keypad-btn" Grid.Row="2" Grid.Column="2" Content="9" Command="{Binding DtmfTapCommand}" CommandParameter="9"/>

                                                    <Button Classes="keypad-btn" Grid.Row="3" Grid.Column="0" Content="*" FontSize="28" Command="{Binding DtmfTapCommand}" CommandParameter="*"/>
                                                    <Button Classes="keypad-btn" Grid.Row="3" Grid.Column="1" Content="0" Command="{Binding DtmfTapCommand}" CommandParameter="0"/>
                                                    <Button Classes="keypad-btn" Grid.Row="3" Grid.Column="2" Content="#" FontSize="24" Command="{Binding DtmfTapCommand}" CommandParameter="#"/>
                                                </Grid>
                                            </StackPanel>

                                            <Button Classes="dock-btn"
                                                    Grid.Row="1"
                                                    Margin="0,20,0,0"
                                                    Width="50" Height="50"
                                                    CornerRadius="25"
                                                    Background="#444444"
                                                    HorizontalAlignment="Center"
                                                    Command="{Binding ToggleKeypadCommand}">
                                                
                                                <TextBlock Text="✕"
                                                           Foreground="White"
                                                           FontSize="20"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </Border>
                            </Panel>
                        </Grid>
                    </Carousel>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>
